{{!-- <h3 class="card-title"> Albums for: {{artist.name}}</h3> --}}
 <div class="row row-cols-1 row-cols-md-3 g-4">
  {{#each albums as |album|}}
    <div class="col">
    <div class="card h-450 w-350">
      <img src="{{album.images.[0].url}}" class="card-img-top" alt="album-image" style="width:100%; height:400px;">
      <div class="card-body text-center bg-light">
        <h5 class="card-title " >{{album.name}}</h5>
        <a class="btn btn-danger" href="/albums/{{artist.id}}">View Tracks</a>
      </div>
    </div>
  </div>
  {{/each}}
 </div>   
